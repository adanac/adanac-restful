		<dependency>
			<groupId>com.bn.b2b</groupId>
			<artifactId>pic-client</artifactId>
			<version>0.0.1</version>
		</dependency>
		
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
		</dependency>
